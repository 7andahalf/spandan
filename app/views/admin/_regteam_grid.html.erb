<%= grid(@tasks_grid,show_filters: :when_filtered) do |g|

  g.column name: 'team_id' ,attribute: 'id' do |task|
    task.team.id
  end

  g.column name: 'team_name' ,attribute: 'id' do |task|
    task.team.name
  end

  g.column name: 'team_email' ,attribute: 'id' do |task|
    User.where(id: task.team.parent_id)[0].email
  end

  g.column name: 'team_phone' ,attribute: 'id' do |task|
    User.where(id: task.team.parent_id)[0].phone_number
  end

  g.column name: 'event_id' ,attribute: 'event_id' do |task|
    task.event.id
  end

  g.column name: 'event_name' ,attribute: 'event_id' do |task|
    task.event.name
  end
end -%>
